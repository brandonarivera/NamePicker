<Window x:Class="NamePicker.AddNames"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NamePicker"
        mc:Ignorable="d"
        Title="AddNames" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="bAddNames" Content="Add Name" HorizontalAlignment="Left" Margin="165,185,0,0" VerticalAlignment="Top" Width="146" Height="51"  Grid.ColumnSpan="2" Click="bAddNames_Click"/>
        <Button x:Name="bDoneAdding" Content="Finished Adding Names" HorizontalAlignment="Left" Margin="467,185,0,0" VerticalAlignment="Top" Width="146" Height="51" Click="bDoneAdding_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="tBxName" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="41" Margin="165,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146"/>

    </Grid>
</Window>

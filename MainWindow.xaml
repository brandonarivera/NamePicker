<Window x:Class="NamePicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NamePicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Color x:Key="Color1">White</Color>
        <LinearGradientBrush x:Key="Brush1" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="Black" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="TextBlockStyle1" TargetType="{x:Type TextBlock}">
            <Setter Property="Background" Value="#FF0026FF"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Button x:Name="bPicker" Content="Choose a Name" HorizontalAlignment="Left" Margin="495,157,0,0" VerticalAlignment="Top" Width="154" Click="bPicker_Click" Height="104"/>
        <Button x:Name="bAddNames" Content="Add Names " HorizontalAlignment="Left" Margin="127,157,0,0" VerticalAlignment="Top" Width="154" Height="104" Click="bAddNamesHere_Click"/>
        <Button x:Name="bExit" Content="Exit" HorizontalAlignment="Left" Margin="281,316,0,0" VerticalAlignment="Top" Width="167" Height="42" Click="bExit_Click"/>
    </Grid>
</Window>
